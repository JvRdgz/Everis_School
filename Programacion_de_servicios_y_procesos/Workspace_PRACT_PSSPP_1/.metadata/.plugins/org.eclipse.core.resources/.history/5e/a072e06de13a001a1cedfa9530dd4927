package clases;

import java.util.Scanner;

public class MenuPrincipal {

	static Scanner sc = new Scanner(System.in);
	static String vagon[][] = new String[9][4];

	public static void menu(int op) {
		String exit = "";
		switch (op) {
		case 1:
			reservarBilletes();
			break;
		case 2:
			// Servidor.chat();
			break;
		case 0:
			do {
				System.out.println("Seguro que quieres salir? (S para si \\ N para no)");
				exit = sc.nextLine();
			} while (!exit.equalsIgnoreCase("S") && !exit.equalsIgnoreCase("N"));
			break;

		}
	}

	public static void inicializarVagon() {
		int j = 0;
		for (int i = 0; i < vagon[i][j].length(); i++) {
			for (j = 0; j < vagon[i][j].length(); j++) {
				vagon[i][j] = "LIBRE";
			}
		}
	}

	public static void mostrarVagon() {
		int j = 0;
		for (int i = 0; i < vagon[i][j].length(); i++) {
			for (j = 0; j < vagon[i][j].length(); j++) {
				System.out.print("[" + i + ", " + j + "]");
			}
			System.out.println();
		}
	}

	private static void reservarBilletes() {
		int fila = 0, columna = 0;

		System.out.println("\nQue plaza quiere reservar?");
		System.out.println("\t -. Escriba el numero de fila: ");
		fila = Integer.parseInt(sc.nextLine());
		System.out.println("\t -. Escriba el numero de columna: ");
		columna = Integer.parseInt(sc.nextLine());
		int j = 0;
		for (int i = 0; i < vagon[i][j].length(); i++) {
			for (j = 0; j < vagon[i][j].length(); j++) {
				if (vagon[i][j].equals(vagon[fila][columna])) {
					if (vagon[fila][columna].equals("L")) {
						vagon[fila][columna] = "OCUPADO";
					}
				}
			}
		}
	}
}
