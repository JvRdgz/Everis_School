package clases;

import java.util.Scanner;

public class MenuPrincipal {

	public static void menu() {
		Scanner sc = new Scanner(System.in);
		int op = 0;
		String exit = "";

		System.out.println("\n\tMENU PRINCIPAL PRACTICA 2\n\n");

		do {
			System.out.println("\t1.- Reservar billete: ");
			System.out.println("\t2.- Chat: ");
			System.out.println("\t0.- Salir.");

			op = Integer.parseInt(sc.nextLine());

			while (op < 0 || op > 2) {
				System.out.println("Opcion no valida, Introduce una opcion entre 0 y 2: ");
				op = Integer.parseInt(sc.nextLine());
			}

			switch (op) {
			case 1:
				// ReservarBillete en otra clase
				break;
			case 2:
				// Crear char en otra clase. El chat esta ya creado en Cliente y Servidor
				break;
			case 0:
				do {
					System.out.println("Seguro que quieres salir? (S para si \\ N para no)");
					exit = sc.nextLine();
				} while (!exit.equalsIgnoreCase("S") && !exit.equalsIgnoreCase("N"));
				break;
			}

		} while (op != 0 || exit.equalsIgnoreCase("N"));
	}
}
